{
  "compilerOptions": {
    "target": "ES2020",             
    "module": "ES2020",             
    "rootDir": "./src",             
    "outDir": "./dist",             
    "strict": true,                 
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}